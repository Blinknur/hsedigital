{
  "title": "Container Resource Usage",
  "uid": "hse-container-resources",
  "tags": ["containers", "resources", "docker"],
  "timezone": "browser",
  "schemaVersion": 27,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "title": "CPU Usage by Container",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "rate(hse_digital_process_cpu_seconds_total[5m]) * 100",
          "legendFormat": "App CPU %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "custom": {"drawStyle": "line", "fillOpacity": 20, "lineWidth": 2}
        }
      }
    },
    {
      "id": 2,
      "title": "Memory Usage by Container",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "hse_digital_process_resident_memory_bytes",
          "legendFormat": "App Memory",
          "refId": "A"
        },
        {
          "expr": "hse_digital_nodejs_heap_size_used_bytes",
          "legendFormat": "Heap Used",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "custom": {"drawStyle": "line", "fillOpacity": 20, "lineWidth": 2}
        }
      }
    },
    {
      "id": 3,
      "title": "Network I/O",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "rate(hse_digital_tenant_data_transfer_bytes_total{direction=\\\"inbound\\\"}[5m])",
          "legendFormat": "Inbound",
          "refId": "A"
        },
        {
          "expr": "rate(hse_digital_tenant_data_transfer_bytes_total{direction=\\\"outbound\\\"}[5m])",
          "legendFormat": "Outbound",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "custom": {"drawStyle": "line", "fillOpacity": 10, "lineWidth": 2}
        }
      }
    },
    {
      "id": 4,
      "title": "Active Connections",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "targets": [
        {
          "expr": "hse_digital_active_connections",
          "legendFormat": "Connections",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {"drawStyle": "line", "fillOpacity": 20, "lineWidth": 2}
        }
      }
    },
    {
      "id": 5,
      "title": "HTTP Request Rate",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
      "targets": [
        {
          "expr": "rate(hse_digital_http_requests_total[5m])",
          "legendFormat": "{{method}} {{status_code}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {"drawStyle": "line", "fillOpacity": 10, "lineWidth": 2}
        }
      }
    },
    {
      "id": 6,
      "title": "HTTP Request Duration (p95)",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(hse_digital_http_request_duration_seconds_bucket[5m]))",
          "legendFormat": "p95 latency",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": {"drawStyle": "line", "fillOpacity": 20, "lineWidth": 2}
        }
      }
    },
    {
      "id": 7,
      "title": "Garbage Collection Duration",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 8, "x": 0, "y": 24},
      "targets": [
        {
          "expr": "rate(hse_digital_nodejs_gc_duration_seconds_sum[5m])",
          "legendFormat": "GC Time",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": {"drawStyle": "line", "fillOpacity": 10, "lineWidth": 2}
        }
      }
    },
    {
      "id": 8,
      "title": "Event Loop Lag",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 8, "x": 8, "y": 24},
      "targets": [
        {
          "expr": "hse_digital_nodejs_eventloop_lag_seconds",
          "legendFormat": "Event Loop Lag",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": {"drawStyle": "line", "fillOpacity": 10, "lineWidth": 2}
        }
      }
    },
    {
      "id": 9,
      "title": "Database Operations",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 8, "x": 16, "y": 24},
      "targets": [
        {
          "expr": "rate(hse_digital_database_queries_total[5m])",
          "legendFormat": "{{operation}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "custom": {"drawStyle": "line", "fillOpacity": 10, "lineWidth": 2}
        }
      }
    }
  ],
  "templating": {
    "list": [
      {
        "name": "interval",
        "type": "interval",
        "query": "1m,5m,10m,30m,1h",
        "current": {"text": "5m", "value": "5m"}
      }
    ]
  },
  "time": {"from": "now-1h", "to": "now"},
  "timepicker": {"refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h"]}
}
