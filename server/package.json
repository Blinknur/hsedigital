{
  "name": "hse-digital-backend",
  "version": "1.0.0",
  "description": "Enterprise Backend for HSE.Digital",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "build": "echo 'Backend: No build step required for Node.js server'",
    "lint": "node -c src/index.js && node -c src/shared/utils/sentry.js && node -c src/api/middleware/sentry.js && echo 'âœ“ Syntax check passed'",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:migrate:custom": "node prisma/run-migrations.js up",
    "prisma:rollback:custom": "node prisma/run-migrations.js down",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "seed": "node src/infrastructure/database/prisma/seed.js",
    "seed:rbac": "node src/infrastructure/database/prisma/seed-comprehensive.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:verbose": "node --experimental-vm-modules node_modules/jest/bin/jest.js --verbose",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern='(auth|analytics|quota|security)\\.test\\.js'",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern='(e2e-integration|tenant-isolation)\\.test\\.js'",
    "test:tenant": "node tests/tenant-isolation.unit.test.js",
    "test:tenant:integration": "node tests/tenant-isolation.test.js",
    "test:migrations": "node prisma/test-migrations.js",
    "test:e2e": "node tests/e2e-integration.test.js",
    "test:e2e:docker": "docker-compose exec app npm run test:e2e",
    "test:load": "node tests/load-testing/run-all-tests.js",
    "test:load:smoke": "node tests/load-testing/scenarios/smoke-test.js",
    "test:load:stress": "node tests/load-testing/scenarios/stress-test.js",
    "test:load:concurrent": "node tests/load-testing/scenarios/concurrent-tenant-test.js",
    "test:load:spike": "node tests/load-testing/scenarios/spike-test.js",
    "test:load:endurance": "node tests/load-testing/scenarios/endurance-test.js",
    "rls:apply": "../prisma/migrations/apply_rls.sh",
    "rls:test": "node test-rls-implementation.js"
  },
  "prisma": {
    "seed": "node src/infrastructure/database/prisma/seed.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.705.0",
    "@aws-sdk/s3-request-presigner": "^3.705.0",
    "@google/generative-ai": "^0.24.1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.67.1",
    "@opentelemetry/exporter-trace-otlp-http": "^0.208.0",
    "@opentelemetry/instrumentation-express": "^0.57.0",
    "@opentelemetry/instrumentation-http": "^0.208.0",
    "@opentelemetry/instrumentation-ioredis": "^0.56.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-node": "^0.208.0",
    "@opentelemetry/semantic-conventions": "^1.38.0",
    "@prisma/client": "^5.10.0",
    "@sentry/node": "^10.27.0",
    "@sentry/profiling-node": "^10.27.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "archiver": "^7.0.0",
    "bcrypt": "^5.1.1",
    "bull": "^4.16.5",
    "bull-board": "^1.7.2",
    "chart.js": "^4.4.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cron": "^3.2.1",
    "csurf": "^1.11.0",
    "csv-parser": "^3.0.0",
    "dompurify": "^3.3.0",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "isomorphic-dompurify": "^2.33.0",
    "jsdom": "^27.2.0",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.11",
    "pdfkit": "^0.15.1",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "prom-client": "^15.1.3",
    "puppeteer": "^23.11.1",
    "redis": "^5.10.0",
    "sharp": "^0.33.5",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "socket.io-redis": "^5.4.0",
    "stripe": "^20.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "autocannon": "^7.15.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prisma": "^5.10.0",
    "supertest": "^6.3.3"
  }
}
