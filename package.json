{
  "name": "hse-digital-backend",
  "version": "1.0.0",
  "description": "Enterprise Backend for HSE.Digital",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "cd server && node src/index.js",
    "dev": "cd server && nodemon src/index.js",
    "build": "mkdir -p dist && echo 'Build: Backend only (frontend build requires vite to be installed)'",
    "build:frontend": "mkdir -p dist && (command -v vite >/dev/null 2>&1 && cd src && vite build || echo 'Vite not found, skipping frontend build')",
    "build:sourcemaps": "mkdir -p dist && (SENTRY_RELEASE=$(git describe --tags --always) && command -v vite >/dev/null 2>&1 && cd src && vite build || echo 'Vite not found, skipping frontend build')",
    "test": "./scripts/run-tests.sh docker",
    "test:docker": "./scripts/run-tests.sh docker",
    "test:unit": "./scripts/run-tests.sh unit",
    "test:integration": "./scripts/run-tests.sh integration",
    "test:regression": "./scripts/run-tests.sh regression",
    "test:local": "cd server && npm test",
    "test:setup": "./scripts/run-tests.sh setup",
    "test:stop": "./scripts/run-tests.sh stop",
    "test:logs": "./scripts/run-tests.sh logs",
    "lint": "cd server && npm run lint",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "seed": "node prisma/seed.js",
    "docker:up": "docker-compose -f docker/docker-compose.yml --profile production up -d",
    "docker:up:dev": "docker-compose -f docker/docker-compose.yml --profile development up -d",
    "docker:up:debug": "docker-compose -f docker/docker-compose.yml --profile production-debug up -d",
    "docker:up:admin": "docker-compose -f docker/docker-compose.yml --profile production --profile admin up -d",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "docker:logs": "docker-compose -f docker/docker-compose.yml logs -f",
    "docker:logs:app": "docker-compose -f docker/docker-compose.yml logs -f app app-dev app-prod-debug",
    "docker:logs:db": "docker-compose -f docker/docker-compose.yml logs -f postgres",
    "docker:logs:redis": "docker-compose -f docker/docker-compose.yml logs -f redis",
    "docker:build": "docker-compose -f docker/docker-compose.yml build --no-cache",
    "docker:build:slim": "docker build -f docker/Dockerfile --build-arg BUILD_VARIANT=slim -t hse-digital:slim .",
    "docker:build:bullseye": "docker build -f docker/Dockerfile --build-arg BUILD_VARIANT=bullseye -t hse-digital:bullseye .",
    "docker:build:alpine": "docker build -f docker/Dockerfile --build-arg BUILD_VARIANT=alpine -t hse-digital:alpine .",
    "docker:build:all": "./docker/build-all-variants.sh",
    "docker:restart": "docker-compose -f docker/docker-compose.yml restart",
    "docker:clean": "docker-compose -f docker/docker-compose.yml down -v",
    "docker:ps": "docker-compose -f docker/docker-compose.yml ps",
    "docker:health": "docker-compose -f docker/docker-compose.yml ps && curl -f http://localhost:3001/api/health || echo 'Services not running'",
    "test:e2e": "./scripts/run-e2e-tests.sh",
    "test:e2e:local": "TEST_ENV=local ./scripts/run-e2e-tests.sh",
    "backup": "./scripts/backup.sh",
    "backup:tenant": "./scripts/backup.sh --tenant",
    "restore": "./scripts/restore.sh",
    "restore:list": "./scripts/restore.sh --list",
    "backup:test": "./scripts/weekly-backup-test.sh"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@prisma/client": "^5.10.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.11",
    "stripe": "^20.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.3",
    "prisma": "^5.10.0"
  }
}
