{
  "name": "hse-digital-backend",
  "version": "1.0.0",
  "description": "Enterprise Backend for HSE.Digital",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "build": "echo 'Build: Frontend build managed separately (see vite.config.ts)'",
    "build:frontend": "cd src && vite build",
    "build:sourcemaps": "SENTRY_RELEASE=$(git describe --tags --always) && cd src && vite build",
    "test": "echo 'Tests: Not yet configured' && exit 0",
    "lint": "cd server && npm run lint",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "seed": "node prisma/seed.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:logs:app": "docker-compose logs -f app",
    "docker:logs:db": "docker-compose logs -f postgres",
    "docker:logs:redis": "docker-compose logs -f redis",
    "docker:build": "docker-compose build --no-cache",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v",
    "docker:ps": "docker-compose ps",
    "docker:health": "docker-compose ps && curl -f http://localhost:3001/api/health || echo 'Services not running'",
    "test:e2e": "./scripts/run-e2e-tests.sh",
    "test:e2e:local": "TEST_ENV=local ./scripts/run-e2e-tests.sh",
    "backup": "./scripts/backup.sh",
    "backup:tenant": "./scripts/backup.sh --tenant",
    "restore": "./scripts/restore.sh",
    "restore:list": "./scripts/restore.sh --list",
    "backup:test": "./scripts/weekly-backup-test.sh"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@prisma/client": "^5.10.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.11",
    "stripe": "^20.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.3",
    "prisma": "^5.10.0"
  }
}
