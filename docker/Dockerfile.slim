# Multi-stage Dockerfile using Debian Slim base (OPTIMIZED)
# Purpose: Minimal production image with layer caching optimization

# Stage 1: Dependencies - Cache npm dependencies separately
FROM node:18-slim AS deps

WORKDIR /app

# Copy only package files for better layer caching
COPY package*.json ./
COPY server/package*.json ./server/

# Install production dependencies only
RUN npm ci --only=production && \
    cd server && npm ci --only=production

# Stage 2: Builder - Build application with dev dependencies
FROM node:18-slim AS builder

WORKDIR /app

# Install build dependencies (minimal set)
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    openssl \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Copy package files
COPY package*.json ./
COPY server/package*.json ./server/

# Install all dependencies (including dev dependencies)
RUN npm ci && cd server && npm ci

# Copy application source
COPY . .

# Generate Prisma client
COPY prisma ./prisma
RUN npx prisma generate

# Build frontend if build script exists
RUN npm run build:sourcemaps || npm run build || mkdir -p /app/dist

# Stage 3: Production runtime
FROM node:18-slim AS production

WORKDIR /app

# Install only runtime dependencies (minimal set)
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    openssl \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Create non-root user
RUN groupadd -r nodejs && useradd -r -g nodejs nodejs

# Copy production dependencies from deps stage
COPY --from=deps --chown=nodejs:nodejs /app/node_modules ./node_modules
COPY --from=deps --chown=nodejs:nodejs /app/server/node_modules ./server/node_modules

# Copy Prisma schema and generated client
COPY --chown=nodejs:nodejs prisma ./prisma
COPY --from=builder --chown=nodejs:nodejs /app/node_modules/.prisma ./node_modules/.prisma

# Copy application files
COPY --from=builder --chown=nodejs:nodejs /app/package*.json ./
COPY --from=builder --chown=nodejs:nodejs /app/server ./server
COPY --from=builder --chown=nodejs:nodejs /app/dist ./dist

# Create uploads directory
RUN mkdir -p /app/server/public/uploads && \
    chown -R nodejs:nodejs /app/server/public/uploads

# Switch to non-root user
USER nodejs

# Set environment to production
ENV NODE_ENV=production \
    NODE_OPTIONS="--max-old-space-size=2048"

# Expose application port
EXPOSE 3001

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
  CMD node -e "require('http').get('http://localhost:3001/api/health', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})"

# Start application
CMD ["node", "server/src/index.js"]
