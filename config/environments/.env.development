# ================================
# DEVELOPMENT ENVIRONMENT
# ================================
# Copy this to root as .env for local development

NODE_ENV=development
PORT=3001

# ================================
# DATABASE
# ================================
DATABASE_URL=postgresql://hse_admin:dev_password_123@localhost:5432/hse_platform
POSTGRES_USER=hse_admin
POSTGRES_PASSWORD=dev_password_123
POSTGRES_DB=hse_platform
DATABASE_CONNECTION_LIMIT=10
DATABASE_CONNECTION_TIMEOUT=5000
DATABASE_POOL_TIMEOUT=10000

# ================================
# SECURITY (REQUIRED)
# ================================
JWT_SECRET=dev-secret-key-change-in-prod
REFRESH_SECRET=dev-refresh-secret-key

# ================================
# REDIS
# ================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_PASSWORD=

# ================================
# APPLICATION
# ================================
CLIENT_URL=http://localhost:5173
CORS_ORIGIN=*

# ================================
# INTEGRATIONS (Development/Test Keys)
# ================================
API_KEY=your-google-ai-api-key
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_pass

# ================================
# MONITORING (Development Settings)
# ================================
LOG_LEVEL=debug
SLOW_QUERY_THRESHOLD_MS=1000
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# OpenTelemetry
OTEL_ENABLED=true
OTEL_SERVICE_NAME=hse-digital-backend-dev
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces

# ================================
# REPORTS
# ================================
REPORTS_STORAGE_TYPE=local
REPORTS_LOCAL_PATH=./public/reports
REPORT_RETENTION_DAYS=30

# ================================
# PGADMIN
# ================================
PGADMIN_EMAIL=admin@hse.digital
PGADMIN_PASSWORD=admin123
