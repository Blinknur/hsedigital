# ================================
# PRODUCTION ENVIRONMENT
# ================================
# For production deployment configuration

NODE_ENV=production
PORT=3001

# ================================
# DATABASE
# ================================
DATABASE_URL=postgresql://hse_admin:CHANGE_ME@production-db.internal:5432/hse_platform
POSTGRES_USER=hse_admin
POSTGRES_PASSWORD=CHANGE_ME
POSTGRES_DB=hse_platform
DATABASE_CONNECTION_LIMIT=50
DATABASE_CONNECTION_TIMEOUT=5000
DATABASE_POOL_TIMEOUT=10000
DATABASE_POOL_MAX=50

# ================================
# SECURITY (REQUIRED - SET STRONG VALUES)
# ================================
JWT_SECRET=CHANGE_ME_STRONG_SECRET_MIN_32_CHARS
REFRESH_SECRET=CHANGE_ME_STRONG_REFRESH_SECRET_MIN_32_CHARS

# ================================
# REDIS
# ================================
REDIS_URL=redis://:REDIS_PASSWORD@production-redis.internal:6379
REDIS_HOST=production-redis.internal
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME
QUEUE_REDIS_HOST=production-redis.internal
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_PASSWORD=CHANGE_ME
QUEUE_CONCURRENCY=10
QUEUE_MAX_RETRIES=3
QUEUE_BACKOFF_DELAY=5000

# ================================
# APPLICATION
# ================================
CLIENT_URL=https://app.hse.digital
CORS_ORIGIN=https://app.hse.digital,https://hse.digital

# ================================
# INTEGRATIONS
# ================================
API_KEY=your-production-google-ai-key
STRIPE_SECRET_KEY=sk_live_production_key
STRIPE_WEBHOOK_SECRET=whsec_production_secret
STRIPE_PRICE_STARTER=price_starter_id
STRIPE_PRICE_PROFESSIONAL=price_professional_id
STRIPE_PRICE_ENTERPRISE=price_enterprise_id
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=CHANGE_ME

# ================================
# MONITORING
# ================================
LOG_LEVEL=info
SLOW_QUERY_THRESHOLD_MS=1000

# Sentry
SENTRY_DSN=https://your-production-sentry-dsn@sentry.io/project-id
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.05
SENTRY_RELEASE=
SENTRY_DIST=production

# OpenTelemetry
OTEL_ENABLED=true
OTEL_SERVICE_NAME=hse-digital-backend
OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger-production.internal:4318/v1/traces

# Trace Sampling
TRACE_SAMPLE_RATE_ENTERPRISE=1.0
TRACE_SAMPLE_RATE_PROFESSIONAL=0.5
TRACE_SAMPLE_RATE_STARTER=0.1
TRACE_SAMPLE_RATE_FREE=0.01
TRACE_SAMPLE_RATE_DEFAULT=0.1

# ================================
# ALERTING
# ================================
ALERT_ERROR_RATE_THRESHOLD=0.02
ALERT_RESPONSE_TIME_MS=3000
ALERT_DB_QUERY_TIME_MS=1000
ALERT_RATE_LIMIT_HITS=100
ALERT_EMAIL_RECIPIENTS=production-alerts@example.com,oncall@example.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/PRODUCTION/WEBHOOK
PAGERDUTY_INTEGRATION_KEY=YOUR_PAGERDUTY_KEY

# ================================
# AWS S3
# ================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=CHANGE_ME
AWS_SECRET_ACCESS_KEY=CHANGE_ME
S3_BUCKET_NAME=hse-digital-production-reports
S3_REPORTS_PREFIX=reports/

# ================================
# REPORTS
# ================================
REPORTS_STORAGE_TYPE=s3
REPORT_RETENTION_DAYS=365

# ================================
# BACKUP
# ================================
BACKUP_DIR=/var/backups/hse-digital
S3_ENABLED=true
S3_BUCKET=hse-digital-production-backups
S3_REGION=us-east-1
S3_PREFIX=backups/
NOTIFICATION_EMAIL=ops@example.com
NOTIFICATION_WEBHOOK=https://your-webhook-url.com

# ================================
# AUDIT
# ================================
AUDIT_LOG_RETENTION_DAYS=730
